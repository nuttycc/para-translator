{
  "name": "para-translator",
  "description": "A browser extension focus on para translation",
  "private": true,
  "version": "0.0.1",
  "type": "module",
  "scripts": {
    "dev": "wxt",
    "dev:firefox": "wxt -b firefox",
    "build": "wxt build",
    "build:firefox": "wxt build -b firefox",
    "zip": "wxt zip",
    "zip:firefox": "wxt zip -b firefox",
    "compile": "vue-tsc --noEmit",
    "test": "vitest",
    "test:run": "vitest run",
    "lint": "oxlint --type-aware .",
    "format": "prettier --write .",
    "postinstall": "wxt prepare"
  },
  "dependencies": {
    "@logtape/logtape": "^1.0.4",
    "@logtape/pretty": "^1.0.4",
    "@webext-core/messaging": "^2.3.0",
    "es-toolkit": "^1.39.10",
    "openai": "^5.15.0",
    "vue": "^3.5.19",
    "vue-router": "^4.5.1",
    "zod": "^4.1.1"
  },
  "devDependencies": {
    "@prettier/plugin-oxc": "^0.0.4",
    "@tailwindcss/vite": "^4.1.12",
    "@wxt-dev/module-vue": "^1.0.2",
    "daisyui": "^5.0.50",
    "happy-dom": "^18.0.1",
    "jsdom": "^26.1.0",
    "oxlint": "^1.12.0",
    "oxlint-tsgolint": "^0.0.4",
    "prettier": "^3.6.2",
    "tailwindcss": "^4.1.12",
    "typescript": "5.9.2",
    "vitest": "^3.2.4",
    "vue-tsc": "^3.0.6",
    "wxt": "^0.20.8"
  },
  "pnpm": {
    "overrides": {
      "vite": "npm:rolldown-vite@latest"
    },
    "onlyBuiltDependencies": [
      "@tailwindcss/oxide",
      "esbuild",
      "spawn-sync"
    ]
  }
}
