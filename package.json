{
  "name": "para-translator",
  "description": "A browser extension help you learn new languages by understanding webpage paragraphs.",
  "private": true,
  "version": "0.0.1",
  "type": "module",
  "repository": "https://github.com/nuttycc/para-translator.git",
  "homepage": "https://github.com/nuttycc/para-translator",
  "license": "MIT",
  "scripts": {
    "dev": "wxt",
    "dev:firefox": "wxt -b firefox",
    "build": "wxt build",
    "zip": "wxt zip",
    "compile": "vue-tsc --noEmit",
    "test": "vitest run",
    "lint": "oxlint --fix --type-aware .",
    "format": "prettier --write .",
    "postinstall": "wxt prepare",
    "prepare": "husky"
  },
  "dependencies": {
    "@logtape/logtape": "^1.1.0",
    "@logtape/pretty": "^1.1.0",
    "@vueuse/core": "^13.9.0",
    "@webext-core/messaging": "^2.3.0",
    "defuddle": "^0.6.6",
    "es-toolkit": "^1.39.10",
    "lucide-vue-next": "^0.544.0",
    "motion-v": "^1.7.1",
    "openai": "^5.20.2",
    "overtype": "^1.2.6",
    "pinia": "^3.0.3",
    "vue": "^3.5.21",
    "vue-json-pretty": "^2.5.0",
    "vue-markdown-render": "^2.3.0",
    "vue-router": "^4.5.1",
    "zod": "^4.1.8"
  },
  "devDependencies": {
    "@fontsource-variable/inter": "^5.2.7",
    "@ianvs/prettier-plugin-sort-imports": "^4.7.0",
    "@prettier/plugin-oxc": "^0.0.4",
    "@tailwindcss/typography": "^0.5.16",
    "@tailwindcss/vite": "^4.1.13",
    "@types/node": "^24.4.0",
    "@wxt-dev/auto-icons": "^1.1.0",
    "@wxt-dev/module-vue": "^1.0.3",
    "daisyui": "^5.1.12",
    "globals": "^16.4.0",
    "happy-dom": "^18.0.1",
    "husky": "^9.1.7",
    "jsdom": "^27.0.0",
    "lint-staged": "^16.1.6",
    "oxlint": "^1.15.0",
    "oxlint-tsgolint": "^0.2.0",
    "prettier": "^3.6.2",
    "prettier-plugin-tailwindcss": "^0.6.14",
    "tailwindcss": "^4.1.13",
    "typescript": "5.9.2",
    "typescript-eslint": "^8.43.0",
    "vite-tsconfig-paths": "^5.1.4",
    "vitest": "^3.2.4",
    "vue-tsc": "^3.0.7",
    "wxt": "^0.20.11"
  },

  "overrides": {
    "vite": "npm:rolldown-vite@latest"
  },

  "lint-staged": {
    "*.{js,jsx,ts,tsx}": [
      "oxlint max-warnings=0",
      "prettier --write"
    ]
  },
  "trustedDependencies": [
    "@tailwindcss/oxide",
    "spawn-sync"
  ]
}
