{
  // See the schema for all options: https://docs.renovatebot.com/renovate-schema.json
  "$schema": "https://docs.renovatebot.com/renovate-schema.json",

  // Extend the base configuration
  "extends": [
    "config:base"
  ],

  // Group dependencies by update type
  "packageRules": [
    {
      // Group all patch updates together
      "matchUpdateTypes": ["patch", "pin", "digest"],
      "groupName": "all patch updates"
    },
    {
      // Group all minor updates together
      "matchUpdateTypes": ["minor"],
      "groupName": "all minor updates"
    }
  ]
}
